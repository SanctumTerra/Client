{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": ".", 
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": ["./*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
